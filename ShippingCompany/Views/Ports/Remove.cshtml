@model ShippingCompany.Models.PortModel
<div class="modal-content">
    <div class="modal-header">
        <h4>Ви впевнені що хочете видалити цей порт?</h4>
    </div>
    <div class="modal-body">
        <form method="post">
            <div>
                <div>Name: @Model.Name</div>
                <div>Country: @Model.Country</div>
                <input type="hidden" asp-for="Id" id="Id" />
            </div>
            <div class="d-inline-flex">
                <input type="button" id="close" value="Ні. Скасувати" />
                <input type="submit" asp-action="Remove" value="Так. Видалити" />
            </div>
        </form>
    </div>
</div>
